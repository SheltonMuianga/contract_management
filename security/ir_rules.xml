<?xml version="1.0" encoding="utf-8" ?>
<odoo>
    <data noupdate="0">
        <!--Contract-->
        <!-- Contract Manager-->
        <record id="manager_can_see_all_contract_records" model="ir.rule">
            <field name="name">Contract Manager: see all records</field>
            <field name="model_id" ref="contract_management.module_contract_management"/>
            <field name="domain_force">[(1,'=', 1)]</field>
            <field name="perm_read" eval="1"/>
            <field name="perm_write" eval="1"/>
            <field name="perm_create" eval="1"/>
            <field name="perm_unlink" eval="1"/>
            <field name="groups" eval="[(4,ref('contract_management.contract_manager'))]"/>
        </record>
        <!-- Insurance User-->
        <record id="users_can_only_see_their_own_contract_records" model="ir.rule">
            <field name="name">Contract User: own records</field>
            <field name="model_id" ref="contract_management.module_contract_management"/>
            <!-- <field name="domain_force">[('policy_holder_id','=',user.partner_id.id)]</field> -->
            <field name="perm_read" eval="1"/>
            <field name="perm_write" eval="0"/>
            <field name="perm_create" eval="0"/>
            <field name="perm_unlink" eval="0"/>
            <field name="groups" eval="[(4,ref('contract_management.contract_user'))]"/>
        </record>
    </data>
</odoo>