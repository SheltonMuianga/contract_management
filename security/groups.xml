<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data noupdate="0">
        <record id="module_contract_management" model="ir.module.category">
            <field name="name">Contract</field>
            <field name="description">Access rights for Contract Management</field>
        </record>
        <record id="contract_user" model="res.groups">
            <field name="name">User</field>
            <field name="implied_ids" eval="[(4, ref('base.group_user'))]"/>
            <field name="category_id" ref="module_contract_management"/>
        </record>
        <record id="contract_manager" model="res.groups">
            <field name="name">Manager</field>
            <field name="implied_ids" eval="[(4, ref('contract_user'))]"/>
            <field name="category_id" ref="module_contract_management"/>
            <field name="users" eval="[(4, ref('base.user_root')), (4, ref('base.user_admin'))]"/>
        </record>
        <record id="base.default_user" model="res.users">
            <field name="groups_id" eval="[(4, ref('contract_manager'))]"/>
        </record>
    </data>
</odoo>