<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <!--Contract Information -->
        <record id="insurance_information_view_form" model="ir.ui.view">
            <field name="name">conttract.information.view.form</field>
            <field name="model">contract.information</field>
            <field name="arch" type="xml">
                <form create="false">
                    <header>
                        <field name="state" widget="statusbar" statusbar_visible="running,to_expire,expired,closed"/>
                    </header>

                    <sheet>
                        <div class="row">
                            <div class="col-md-8">
                                <div class="oe_title">
                                    <h1>
                                        <field name="contract_number"/>
                                    </h1>
                                </div>
                            </div>
                        </div>
                        <separator string="Contract Details"/>
                        <group>
                            <group>
                                <field name="provider_ids" options="{'no_create': True, 'no_create_edit': True}"/>
                                <field name="provider_rate" />
                                <field name="contract_type_ids" options="{'no_create': True, 'no_create_edit': True}"/>
                                <field name="departments_ids" options="{'no_create': True, 'no_create_edit': True}"/>
                                <field name="issue_date" />
                                <field name="expiry_date" />
                            </group>
                        </group>
                        <separator string="Amount Details"/>
                        <group>
                            <field name="payment_method" widget="radio"/>
                            <field name="total_amount" invisible="payment_method == 'partial_payment' or payment_method == 'monthly_payment'"/>
                        </group>
                        <notebook invisible="payment_method == 'one_time_payment'">
                            <page string="Amount Details">
                                <field name="history_of_payments_ids">
                                    <tree editable="bottom">
                                        <field name="payment_method" invisible="True"/>
                                        <field name="contract_number"/>
                                        <field name="monthly_amount"/>
                                        <field name="cumulative_till_date"/>
                                        <field name="balance_contract_value" invisible="payment_method == 'monthly_payment'"/>
                                        <field name="state_money" widget="badge"
                                            decoration-success="state_money == 'paid'"
                                            decoration-danger="state_money == 'unpaid'"/>

                                        <!-- Action buttons -->
                                        <button name="action_mark_paid"
                                            string="Mark as Paid"
                                            type="object"
                                            class="btn-primary"
                                            invisible="state_money == 'paid'"/>

                                        <button name="action_mark_unpaid"
                                            string="Mark as Unpaid"
                                            type="object"
                                            class="btn-danger"
                                            invisible="state_money == 'unpaid'"/>
                                    </tree>
                                    <form>
                                        <header>
                                            <field name="payment_method" invisible="1"/>
                                            <field name="state_money" widget="statusbar" statusbar_visible="paid,unpaid"/>
                                        </header>     
                                        <group>
                                            <field name="monthly_amount"/>
                                            <field name="cumulative_till_date"/>
                                            <field name="balance_contract_value" invisible="payment_method == 'monthly_payment'"/>
                                            <field name="state_money" widget="statusbar" statusbar_visible="paid,unpaid"/>
                                        </group>
                                    </form>
                                </field>
                            </page>
                        </notebook> 
                        <notebook>
                            <page string="Observations">
                                <field name="observations" widget="text" class="oe_longtext"/>
                            </page>
                            <page string="Attachments">
                                <field name="attachment_ids">
                                    <tree editable="bottom">
                                        <field name="name"/>
                                        <field name="file" filename="name"/>
                                    </tree>
                                    <form>
                                        <group>
                                            <field name="name"/>
                                            <field name="file" filename="name" widget="pdf_viewer"/>
                                        </group>
                                    </form>
                                </field>
                            </page>
                        </notebook>

                        <separator string="Renewed Details"/>
                        <group>
                            <group>
                                <field name="renewed_box"
                                    widget="boolean_button"
                                    options="{'terminology': 'Contract'}"
                                    nolabel="1"/>
                            </group>
                        </group>
                        <notebook invisible="renewed_box == False">
                            <page string="Renewed Information">
                                <field name="renewed_ids">
                                    <tree editable="bottom">
                                        <field name="contract_number"/>
                                        <field name="renewed_amount"/>
                                        <field name="renewed_date"/>
                                        <field name="expiry_date"/>
                                        <field name="state_renewed" widget="badge"
                                            decoration-success="state_renewed == 'renewed'"/>
                                    </tree>
                                    <form>
                                        <group>
                                            <field name="renewed_amount"/>
                                            <field name="renewed_date"/>
                                            <field name="expiry_date"/>
                                            <field name="state_renewed" widget="statusbar" statusbar_visible="renewed"/>
                                        </group>
                                    </form>
                                </field>
                            </page>
                        </notebook>

                        <separator string="Closed Details"/>
                        <group>
                            <group>
                                <field name="closed_box"
                                    widget="boolean_button"
                                    options="{'terminology': 'Contract'}"
                                    nolabel="1"/>
                            </group>
                        </group>
                        <notebook invisible="state != 'closed'">
                            <page string="Closed Reason" >
                                <field name="closed_reason" widget="text" class="oe_longtext"/>
                            </page>
                        </notebook>
                    </sheet>
                    <div class="oe_chatter">
                        <field name="message_follower_ids"/>
                        <field name="activity_ids"/>
                        <field name="message_ids"/>
                    </div>
                </form>
            </field>
        </record>

        <record id="insurance_information_view_tree" model="ir.ui.view">
            <field name="name">contract.information.view.tree</field>
            <field name="model">contract.information</field>
            <field name="arch" type="xml">
                <tree default_order="create_date desc">
                    <field name="contract_number" />
                    <field name="provider_ids"/>
                    <field name="contract_type_ids"/>
                    <field name="departments_ids"/>
                    <field name="issue_date" />
                    <field name="expiry_date" />
                    <field name="payment_method"/>
                    <field name="total_amount" sum="Total Sum"/>
                    <field name="state" widget="badge"
                           decoration-info="state == 'closed'"
                           decoration-warning="state == 'to_expire'"
                           decoration-danger="state == 'expired'"
                           decoration-success="state == 'running'"/>
                </tree>
            </field>
        </record>
        <record id="insurance_information_calendar_view" model="ir.ui.view">
            <field name="name">contract.information.information.calendar.view</field>
            <field name="model">contract.information</field>
            <field name="arch" type="xml">
                <calendar string="Contract Information Calendar"
                          date_start="issue_date"
                          event_open_popup="true"
                          mode="month"
                          scales="day,month,year"
                          quick_create="False">
                    <field name="contract_number"/>
                    <field name="provider_ids"/>
                    <field name="issue_date"/>
                </calendar>
            </field>
        </record>
        <record id="insurance_information_kanban_view" model="ir.ui.view">
            <field name="name">contract.information.kanban.view</field>
            <field name="model">contract.information</field>
            <field name="arch" type="xml">
                <kanban edit="false" group_create="0"
                    records_draggable="0"
                    class="o_slide_kanban"
                    sample="1"
                    quick_create="false">
                    <field name="contract_number"/>
                    <field name="provider_ids"/>
                    <field name="contract_type_ids"/>
                    <field name="departments_ids"/>
                    <field name="issue_date"/>
                    <field name="expiry_date"/>
                    <field name="state"/>
                    <templates>
                        <t t-name="kanban-box">
                            <div t-attf-class="oe_kanban_card oe_kanban_global_click">
                                <div class="o_kanban_record_top mb16">
                                    <div class="o_kanban_record_headings mt4">
                                        <strong>
                                            <field name="contract_number"/>
                                        </strong>
                                        <br/>
                                        <span>
                                            Company Name:
                                            <field name="provider_ids"/>
                                        </span>
                                        <br/>
                                        <span>
                                            Contract Amount:
                                            <field name="total_amount"/>
                                        </span>
                                    </div>
                                </div>
                                <div class="o_kanban_record_bottom">
                                    <div class="oe_kanban_bottom_left">
                                        <field name="issue_date"/>&#160;-
                                        <field name="expiry_date"/>
                                    </div>
                                    <div class="oe_kanban_bottom_right">
                                        <field name="state" widget="label_selection"
                                               options="{'classes': {'closed': 'info', 'to_expire': 'warning', 'running': 'success', 'expired': 'danger'}}"/>
                                    </div>
                                </div>
                            </div>
                        </t>
                    </templates>
                </kanban>
            </field>
        </record>
        <record id="insurance_information_search_view" model="ir.ui.view">
            <field name="name">contract.information.search.view</field>
            <field name="model">contract.information</field>
            <field name="arch" type="xml">
                <search>
                    <field name="contract_number"/>
                </search>
            </field>
        </record>
        <record id="insurance_information_action" model="ir.actions.act_window">
            <field name="name">Contract</field>
            <field name="res_model">contract.information</field>
            <field name="view_mode">tree,form,kanban,calendar,search,activity</field>
        </record>
    </data>
</odoo>